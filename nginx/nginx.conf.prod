server {
    listen 80;

    server_name monumentsmap.ua.pl;

    location / {
        proxy_pass http://client:80;
    }

    location /api {
        proxy_pass http://monumentsmap-api:5000;
    }

    location /admin {
        rewrite /admin/(.*) /$1 break;
        proxy_pass http://client-admin:80;
        proxy_redirect off;
    }
}